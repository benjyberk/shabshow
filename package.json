{
  "description": "Shabbat Slideshow",
  "author": "Benjy Berkowicz",
  "build": {
    "appId": "com.shabshow",
    "productName": "Shabshow",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "homepage": "./",
  "name": "shabshow",
  "version": "2.0.0",
  "private": true,
  "main": "public/main.js",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.4.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "dayjs": "^1.11.10",
    "electron-is-dev": "^2.0.0",
    "file-type": "^16.5.3",
    "flow-bin": "^0.171.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "read-chunk": "^4.0.2",
    "web-vitals": "^2.1.4",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"BROWSER=none npm start\" \"electron --inspect=5858 .\"",
    "electron": "electron --inspect=5858 .",
    "flow": "flow",
    "electron:package:mac": "npm run build && electron-builder -m -c.extraMetadata.main=build/main.js",
    "electron:package:win": "npm run build && electron-builder -w -c.extraMetadata.main=build/main.js",
    "electron:package:linux": "npm run build && electron-builder -l -c.extraMetadata.main=build/main.js",
    "prettier": "prettier . --write",
    "electron-rebuild": "$(npm bin)/electron-rebuild"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^18.0.0",
    "electron-builder": "^23.1.0",
    "electron-rebuild": "^3.2.7",
    "prettier": "2.5.1",
    "wait-on": "^6.0.1"
  }
}
